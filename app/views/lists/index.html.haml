= link_to 'Create a list', new_list_path, class: 'ui small orange button'
%h1 My Lists
%table
	%thead
		%tr
			%th List name
			%th Category
			%th{ colspan: '3' } Action
	%tbody
	- @lists.each do |list|
		%tr
			%td= list.name
			%td= list.category.name
			%td= link_to 'Open', list_path(list), class: 'ui positive mini button'
			%td= link_to 'Edit', edit_list_path(list), class: 'ui yellow mini button'
			%td= link_to 'Delete', list_path(list), method: :delete, class: 'ui negative mini button'
